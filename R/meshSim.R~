meshSim <- function(meshID1,
                    meshID2,
                    measure = "Wang",
                    category) {
    scores <- termSim(meshID1, meshID2, meshdata(), measure)
    if(nrow(scores) == 1 & ncol(scores) == 1)
        scores <- as.numeric(scores)
    return(scores)
}


meshdata <- function() {
    new("GOSemSimDATA",
        ont = "MeSH")
}
